<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.example.test.viewmodel.NewColaboradorViewModel" />

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layoutTop"
            android:elevation="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:textSize="13sp"
                android:textColor="@color/purple_200"
                android:onClick="cleanElements"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:text="Limpiar"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp" />

            <TextView
                android:fontFamily="@font/roboto_bold"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Nuevo colaborador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:onClick="closeNewColaborador"
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:text="Cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_weight="3.6"
            android:layout_height="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_marginTop="30dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.example.test.sys.utils.CustomEditText
                                    android:layout_marginVertical="10dp"
                                    android:id="@+id/txtName"
                                    android:background="@drawable/simple_with_border_gray"
                                    android:inputType="text"
                                    android:paddingEnd="10dp"
                                    android:paddingStart="15dp"
                                    android:layout_marginHorizontal="15dp"
                                    android:layout_height="50dp"
                                    android:lines="1"
                                    android:layout_width="match_parent"
                                    android:layout_weight="2.5"
                                    android:textSize="15sp"
                                    android:text="Baudelio Antonio Andalon Villanueva"
                                    android:hint="Nombre"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="15dp" />

                                <com.example.test.sys.utils.CustomEditText
                                    android:layout_marginVertical="10dp"
                                    android:id="@+id/txtMail"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginHorizontal="15dp"
                                    android:background="@drawable/simple_with_border_gray"
                                    android:hint="Mail"
                                    android:inputType="text"
                                    android:lines="1"
                                    android:text="baudelio_andalon@hotmail.com"
                                    android:paddingStart="15dp"
                                    android:paddingLeft="15dp"
                                    android:paddingEnd="10dp"
                                    android:paddingRight="10dp"
                                    android:textSize="15sp" />

                                <LinearLayout
                                    android:layout_marginVertical="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <com.example.test.sys.utils.CustomEditText
                                        android:id="@+id/txtLat"
                                        android:background="@drawable/simple_with_border_gray"
                                        android:inputType="text"
                                        android:paddingEnd="10dp"
                                        android:paddingStart="15dp"
                                        android:layout_marginHorizontal="15dp"
                                        android:layout_height="50dp"
                                        android:lines="1"
                                        android:text="21.32"
                                        android:layout_width="0dp"
                                        android:layout_weight="2"
                                        android:textSize="15sp"
                                        android:hint="Latitude"
                                        android:paddingRight="10dp"
                                        android:paddingLeft="15dp" />
                                    <com.example.test.sys.utils.CustomEditText
                                        android:id="@+id/txtLog"
                                        android:background="@drawable/simple_with_border_gray"
                                        android:inputType="text"
                                        android:paddingEnd="10dp"
                                        android:paddingStart="15dp"
                                        android:layout_marginHorizontal="15dp"
                                        android:layout_height="50dp"
                                        android:lines="1"
                                        android:text="-105.33"
                                        android:layout_width="0dp"
                                        android:layout_weight="2"
                                        android:textSize="15sp"
                                        android:hint="Longitud"
                                        android:paddingRight="10dp"
                                        android:paddingLeft="15dp" />
                                </LinearLayout>


                            </LinearLayout>

                    </LinearLayout>

            </LinearLayout>

        </ScrollView>

            <Button
                android:id="@+id/btnAdd"
                android:onClick="sendData"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                android:background="@color/white"
                android:text="Agregar colaborador"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>