<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModelLogin"
            type="com.example.test.viewmodel.LoginViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/gradient_activity_main"
        android:layout_height="match_parent"
        tools:context=".ui.LoginActivity">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/imgStarting"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_gravity="center_horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="40sp"
                    android:textColor="@color/blue_strong"
                    android:text="Bienvenido"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="30dp" />

                <RelativeLayout
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_centerInParent="true"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="50dp"
                                android:paddingBottom="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.cardview.widget.CardView
                                    android:layout_marginVertical="10dp"
                                    android:id="@+id/cardForm"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="5dp"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="350dp">

                                        <ImageView
                                            android:paddingVertical="15dp"
                                            android:src="@drawable/logo_vectorizado"
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp" />
                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/layoutEmail"
                                            android:layout_marginVertical="10dp"
                                            android:layout_marginHorizontal="10dp"
                                            android:layout_height="65dp"
                                            app:boxStrokeWidth="0dp"
                                            app:boxStrokeWidthFocused="0dp"
                                            android:background="@drawable/allen_edittext_simple_with_border_blue"
                                            app:hintTextColor="@color/black"
                                            android:layout_width="match_parent"
                                            android:hint="Correo">

                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/txtEmail"
                                                android:text="baudelio_andalon@hotmail.com"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@color/white"
                                                android:inputType="textEmailAddress"
                                                android:layout_marginHorizontal="3dp"
                                                android:layout_marginVertical="2dp"
                                                android:textColor="@color/black"
                                                android:textSize="15sp" />

                                        </com.google.android.material.textfield.TextInputLayout>
                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/layoutPassword"
                                            android:background="@drawable/allen_edittext_simple_with_border_blue"
                                            android:layout_marginVertical="10dp"
                                            android:layout_marginHorizontal="10dp"
                                            android:layout_height="65dp"
                                            app:boxStrokeWidth="0dp"
                                            app:boxStrokeWidthFocused="0dp"
                                            app:hintTextColor="@color/black"
                                            app:passwordToggleEnabled="true"
                                            android:layout_width="match_parent"
                                            android:hint="ContraseÃ±a">

                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/txtPassword"
                                                android:text="12345678"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@color/white"
                                                android:inputType="textPassword"
                                                android:layout_marginVertical="2dp"
                                                android:layout_marginHorizontal="3dp"
                                                android:textColor="@color/black"
                                                android:textSize="15sp" />

                                        </com.google.android.material.textfield.TextInputLayout>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </RelativeLayout>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginHorizontal="100dp"
                                android:layout_marginTop="355dp"
                                android:elevation="10dp"
                                android:fontFamily="@font/roboto"
                                android:onClick="startSession"
                                android:paddingHorizontal="10dp"
                                android:text="@string/iniciar_sesion"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</layout>